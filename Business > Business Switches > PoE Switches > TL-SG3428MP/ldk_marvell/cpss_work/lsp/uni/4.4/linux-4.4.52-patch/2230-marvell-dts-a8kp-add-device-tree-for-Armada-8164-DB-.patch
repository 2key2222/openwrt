+	num-lanes = <4>;
+	status = "okay";
+};
+
+&cp4_emac0 {
+	phy-mode = "sfi"; /* lane-2 */
+};
+
+&cp4_ppv22 {
+	l4_chksum_jumbo_port = <0>;
+	pinctrl-names = "default";
+};
+
